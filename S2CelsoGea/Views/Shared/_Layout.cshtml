<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datatablestyle")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-brand {
            padding: 0px;
        }

            .navbar-brand > img {
                height: 10%;
                padding: 2px;
                width: 16%;
                max-height: 48px;
            }

        .top_banner {
            background-size: 100%;
            /*background-image: url('../../Content/Images/controlnsquare.jpg');*/
            background-image: url('../../Content/Images/allstars.jpg');
            width: 100%;
            background-position: 50% 50%;
            padding-top: 23.833333333%;
            height: 0;
            margin-top: 15px;
        }

          .top_banner2 {
            background-size: 100%;
            background-image: url('../../Content/Images/controlnsquare.jpg');
            /*background-image: url('../../Content/Images/allstars.jpg');*/
            width: 100%;
            background-position: 50% 50%;
            padding-top: 23.833333333%;
            height: 0;
            margin-top: 15px;
        }

    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" style="max-height: 48px" href="@Url.Action("Index", "Home")">
                    <img src="~/Content/Images/pressstart.png" alt="Locadora do Amigão!">
                    <span>
                        Locadora do Amigão!
                    </span>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @if (Session["USER"] != null)
                {
                    <p class="navbar-text">Logado com: @Session["USER"].ToString()</p>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Gerenciar Amigos", "Index", "Users")</li>
                        <li>@Html.ActionLink("Gerenciar Jogos", "Index", "Jogos")</li>
                        <li>@Html.ActionLink("Meu Perfil", "Edit", "Users", new { id = Session["USER_ID"].ToString() }, null)</li>
                        <li>@Html.ActionLink("Efetuar Logout", "LogOut", "Users")</li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/aux")
    @Scripts.Render("~/bundles/datatablejs")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
